      <Button fx:id="createNewAccountBTN" layoutX="296.0" layoutY="351.0" mnemonicParsing="false" prefWidth="124.0" styleClass="BTNcolor" stylesheets="@../styles/login.css" text="Create new account" textFill="WHITE" />
